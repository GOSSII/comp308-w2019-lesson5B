<% include ../partials/header.ejs %>

    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <h1><%= title %></h1>
                <a class="btn btn-primary" href="/contact-list/add" role="button">
                 <i class="fas fa-plus-circle"> Add New Contact</i></a>
                <br>
                <table class="table table-bordered table-striped table-hover">
                    <!-- Header Row-->
                    <tr>
                        <th class="text-center">First Name</th>
                        <th class="text-center">Last Name</th>
                        <th class="text-center">Age</th>
                        <th class="text-center">Edit Option</th>
                        <th class="text-center">Delete Option</th>
                    </tr>

                    <!-- Repeatable Template Row -->
                    <% for(let count = 0; count < contactList.length; count++) { %>
                        <tr>
                            <td class="text-center"><%= contactList[count].firstName %></td>
                            <td class="text-center"><%= contactList[count].lastName %></td>
                            <td class="text-center"><%= contactList[count].age %></td>
                            <td class="text-center">
                                <a href="/contact-list/edit/<%= contactList[count].id %>" class="btn btn-primary">
                                    <i class="fas fa-pencil-alt"></i> Edit
                                </a>
                                <td class="text-center">
                                        <a href="/contact-list/delete/<%= contactList[count].id %>" class="btn btn-danger">
                                            <i class="fas fa-trash-alt"></i> Edit
                                        </a>
                            </td>
                            
                        </tr>
                    <% } %>
                </table>

            </div>
        </div>
    </div>

<% include ../partials/footer.ejs %>